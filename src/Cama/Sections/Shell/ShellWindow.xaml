<Window x:Class="Cama.Sections.Shell.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Height="350" Width="525"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
        xmlns:dockablz="http://dragablz.net/winfx/xaml/dockablz"
        xmlns:welcome="clr-namespace:Cama.Module.Start.Sections.Welcome;assembly=Cama.Module.Start"
        xmlns:infrastructure="clr-namespace:Cama.Infrastructure;assembly=Cama.Infrastructure"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="#424242"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Cama">
    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="150" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <dockablz:Layout Grid.Row="0" Margin="0, 5, 0, 0">
                <dragablz:TabablzControl BorderThickness="0"
                                         Margin="0,-1,0,1" x:Name="MyTabControl"
                                         ShowDefaultCloseButton="True" FixedHeaderCount="1"
                                         Background="{DynamicResource MaterialDesignPaper}">
                    <dragablz:TabablzControl.InterTabController>
                        <dragablz:InterTabController InterTabClient="{Binding MyInterTabClient}" />
                    </dragablz:TabablzControl.InterTabController>
                    <welcome:WelcomeView></welcome:WelcomeView>
                </dragablz:TabablzControl>
            </dockablz:Layout>
            <ContentControl prism:RegionManager.RegionName="{x:Static infrastructure:RegionNames.BottomRegion}" Grid.Row="1" />
        </Grid>
        <ContentControl prism:RegionManager.RegionName="{x:Static infrastructure:RegionNames.LoadRegion}" />
    </Grid>
</Window>
